# Claude Code Configuration for Z-Stream Analysis
# This file configures Claude Code behavior for this application

# Notification Settings
export CLAUDE_NOTIFICATIONS=1
export CLAUDE_SOUND_NOTIFICATIONS=1
export CLAUDE_NOTIFICATION_VOLUME=0.7

# Hook Configuration
export CLAUDE_HOOKS_ENABLED=1
export CLAUDE_HOOKS_DIR=".claude"
export CLAUDE_RESPONSE_COMPLETE_HOOK=".claude/hooks.sh response-complete"

# Application Settings
export CLAUDE_APP_NAME="z-stream-analysis"
export CLAUDE_PERSIST_SETTINGS=1
export CLAUDE_AUTO_LOAD_CONFIG=1

# Audio Settings
export CLAUDE_AUDIO_ENABLED=1
export CLAUDE_DEFAULT_SOUND="/System/Library/Sounds/Glass.aiff"
export CLAUDE_SUCCESS_SOUND="/System/Library/Sounds/Hero.aiff"
export CLAUDE_ERROR_SOUND="/System/Library/Sounds/Sosumi.aiff"

# Session Persistence
export CLAUDE_SESSION_PERSIST=1
export CLAUDE_SETTINGS_FILE=".claude/settings.json"