{
  "notifications": {
    "enabled": true,
    "playSound": true,
    "soundFile": "default",
    "events": [
      "response_complete",
      "analysis_complete", 
      "error_occurred"
    ]
  },
  "ui": {
    "showNotifications": true,
    "notificationPosition": "top-right",
    "autoHide": true,
    "autoHideDelay": 3000
  },
  "audio": {
    "enabled": true,
    "volume": 0.7,
    "soundType": "system_default"
  },
  "persistence": {
    "saveSettings": true,
    "loadOnStartup": true,
    "settingsFile": ".claude/settings.json"
  },
  "app_specific": {
    "z_stream_analysis": {
      "notify_on_pipeline_analysis": true,
      "notify_on_classification_complete": true,
      "notify_on_solution_generated": true
    }
  }
}