{
  "hooks": {
    "on-response-complete": {
      "enabled": true,
      "command": "afplay /System/Library/Sounds/Glass.aiff",
      "description": "Play notification sound when AI response completes",
      "timeout": 5000,
      "background": true
    },
    "on-analysis-complete": {
      "enabled": true,
      "command": "afplay /System/Library/Sounds/Hero.aiff",
      "description": "Play success sound when Jenkins analysis completes",
      "timeout": 5000,
      "background": true
    },
    "on-error": {
      "enabled": true, 
      "command": "afplay /System/Library/Sounds/Sosumi.aiff",
      "description": "Play error sound when analysis fails",
      "timeout": 5000,
      "background": true
    },
    "before-tool-execution": {
      "enabled": true,
      "command": ".claude/logging/comprehensive_logging_hook.py --stage pre-tool",
      "description": "Log tool execution start for comprehensive analysis tracking",
      "timeout": 10000,
      "background": true
    },
    "after-tool-execution": {
      "enabled": true,
      "command": ".claude/logging/comprehensive_logging_hook.py --stage post-tool",
      "description": "Log tool execution completion and results",
      "timeout": 10000,
      "background": true
    },
    "on-analysis-start": {
      "enabled": true,
      "command": ".claude/logging/comprehensive_logging_hook.py --stage analysis-start",
      "description": "Initialize comprehensive logging for new analysis run",
      "timeout": 10000,
      "background": true
    },
    "on-service-start": {
      "enabled": true,
      "command": ".claude/logging/comprehensive_logging_hook.py --stage service-start",
      "description": "Log service initialization (Investigation/Solution Intelligence)",
      "timeout": 10000,
      "background": true
    },
    "on-service-complete": {
      "enabled": true,
      "command": ".claude/logging/comprehensive_logging_hook.py --stage service-complete",
      "description": "Log service completion with results and metrics",
      "timeout": 10000,
      "background": true
    }
  },
  "global_settings": {
    "notifications_enabled": true,
    "sound_enabled": true,
    "persist_across_sessions": true,
    "app_specific": "z-stream-analysis",
    "comprehensive_logging": {
      "enabled": true,
      "auto_start": true,
      "track_all_tools": true,
      "track_services": true,
      "real_time_monitoring": true,
      "security_masking": true
    }
  }
}