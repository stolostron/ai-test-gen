{
  "comprehensive_logging": {
    "enabled": true,
    "version": "1.0.0",
    "framework": "z-stream-analysis"
  },
  "global_settings": {
    "log_level": "INFO",
    "auto_start": true,
    "real_time_monitoring": true,
    "enable_performance_tracking": true,
    "enable_security_auditing": true
  },
  "hook_configuration": {
    "auto_install_hooks": true,
    "enabled_hooks": {
      "tool_execution": true,
      "service_coordination": true,
      "analysis_lifecycle": true,
      "context_flow": true,
      "validation_checkpoints": true,
      "error_detection": true
    },
    "hook_timeout_ms": 10000,
    "background_execution": true
  },
  "logging_targets": {
    "master_log": {
      "enabled": true,
      "format": "jsonl",
      "file": "master_log.jsonl"
    },
    "service_logs": {
      "enabled": true,
      "directory": "services/",
      "format": "jsonl"
    },
    "stage_logs": {
      "enabled": true,
      "directory": "stages/",
      "format": "jsonl"
    },
    "tool_logs": {
      "enabled": true,
      "directory": "tools/",
      "format": "jsonl"
    },
    "error_log": {
      "enabled": true,
      "file": "error_log.jsonl",
      "format": "jsonl"
    },
    "execution_summary": {
      "enabled": true,
      "file": "execution_summary.json",
      "format": "json"
    }
  },
  "security": {
    "mask_credentials": true,
    "audit_sensitive_data": true,
    "sensitive_patterns": [
      "token=[^&\\s]+",
      "password=[^&\\s]+",
      "Authorization:\\s*Bearer\\s+[^\\s]+",
      "oc login.*--token=[^\\s]+",
      "export.*TOKEN.*=.*",
      "[A-Za-z0-9]{32,}",
      "--token\\s+[^\\s]+",
      "--password\\s+[^\\s]+"
    ],
    "secure_file_permissions": true
  },
  "performance": {
    "track_timing": true,
    "track_memory_usage": false,
    "async_logging": true,
    "buffer_size": 1000,
    "flush_interval_seconds": 5
  },
  "real_time_monitoring": {
    "enabled": true,
    "refresh_interval_seconds": 2.0,
    "dashboard_enabled": true,
    "alert_conditions": {
      "error_threshold": 5,
      "service_timeout_minutes": 10,
      "tool_timeout_minutes": 5
    },
    "export_status": true
  },
  "analysis_tracking": {
    "track_jenkins_intelligence": true,
    "track_investigation_service": true,
    "track_solution_service": true,
    "track_evidence_validation": true,
    "track_progressive_context": true,
    "track_classification_logic": true,
    "track_fix_generation": true
  },
  "directory_structure": {
    "base_directory": ".claude/logging",
    "runs_directory": "runs",
    "run_id_format": "{pipeline_id}_{timestamp}",
    "timestamp_format": "%Y%m%d_%H%M%S",
    "create_subdirectories": [
      "services",
      "stages", 
      "tools",
      "context",
      "security"
    ]
  },
  "cleanup": {
    "auto_cleanup": true,
    "keep_recent_runs": 10,
    "compress_old_logs": true,
    "max_log_age_days": 30
  }
}