{
  "information_sufficiency": {
    "enabled": true,
    "execution_model": "progressive_enhancement",
    "thresholds": {
      "minimum_score": 0.75,
      "fallback_score": 0.60,
      "force_proceed_threshold": 0.50
    },
    "scoring_weights": {
      "technical_details": 0.35,
      "pr_existence": 0.20,
      "testing_requirements": 0.20,
      "environment_info": 0.15,
      "business_context": 0.10
    },
    "progressive_enhancement": {
      "phase_1_primary_sources": [
        "jira_ticket",
        "subtasks",
        "linked_issues",
        "comments",
        "pr_references"
      ],
      "phase_2_documentation": [
        "official_red_hat_docs",
        "github_documentation",
        "confluence_wiki"
      ],
      "phase_3_web_search": {
        "enabled": true,
        "max_queries": 5,
        "search_patterns": [
          "{jira_id} site:github.com pull request",
          "ACM {component} architecture design",
          "{component} acceptance criteria test scenarios",
          "Red Hat ACM {feature} documentation"
        ],
        "timeout_seconds": 30
      }
    },
    "critical_requirements": {
      "pr_information": {
        "weight": 0.20,
        "required_elements": [
          "pr_links",
          "implementation_details",
          "code_changes"
        ]
      },
      "technical_details": {
        "weight": 0.35,
        "required_elements": [
          "architecture_details",
          "component_mapping",
          "integration_points"
        ]
      },
      "testing_requirements": {
        "weight": 0.20,
        "required_elements": [
          "acceptance_criteria",
          "success_conditions",
          "validation_steps"
        ]
      }
    },
    "stop_conditions": {
      "framework_stop": {
        "condition": "score < fallback_score AND !force_proceed",
        "action": "generate_stop_report",
        "user_notification": true
      },
      "marginal_proceed": {
        "condition": "fallback_score <= score < minimum_score",
        "action": "proceed_with_warnings",
        "warnings": [
          "Test coverage may be limited",
          "Some scenarios may lack detail",
          "Manual review recommended"
        ]
      },
      "force_proceed": {
        "condition": "force_flag_enabled",
        "action": "proceed_regardless",
        "warning": "Proceeding with insufficient information - results may be incomplete"
      }
    },
    "reporting": {
      "stop_report_format": "markdown",
      "include_jira_suggestions": true,
      "include_search_recommendations": true,
      "save_reports": true,
      "report_directory": "insufficient_info_reports"
    },
    "learning": {
      "track_sufficiency_outcomes": true,
      "adjust_weights_based_on_feedback": false,
      "minimum_data_points": 100
    }
  }
}
