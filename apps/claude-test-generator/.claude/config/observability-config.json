{
  "observability_agent": {
    "enabled": true,
    "service_id": "tg_framework_observability_agent",
    "execution_mode": "on_demand",
    "authority_level": "read_only",
    "integration_points": {
      "progressive_context_monitoring": true,
      "sub_agent_tracking": true,
      "validation_engine_access": true,
      "run_metadata_streaming": true,
      "phase_transition_hooks": true,
      "error_detection_alerts": true
    },
    "command_interface": {
      "enabled": true,
      "command_prefix": "/",
      "response_formatting": "detailed",
      "real_time_updates": true,
      "command_history": true,
      "context_aware_responses": true
    },
    "data_access": {
      "framework_state": true,
      "sub_agent_outputs": true,
      "context_inheritance_chain": true,
      "validation_checkpoints": true,
      "environment_data": true,
      "performance_metrics": true,
      "quality_scores": true,
      "execution_timeline": true
    },
    "monitoring_configuration": {
      "phase_tracking": {
        "enabled": true,
        "progress_estimation": true,
        "milestone_notifications": true,
        "completion_alerts": true
      },
      "agent_coordination": {
        "spawn_tracking": true,
        "completion_monitoring": true,
        "context_flow_visualization": true,
        "performance_tracking": true
      },
      "validation_monitoring": {
        "evidence_validation_engine": true,
        "implementation_reality_agent": true,
        "cross_agent_validation_engine": true,
        "format_enforcement_service": true
      },
      "risk_detection": {
        "version_compatibility": true,
        "environment_health": true,
        "context_conflicts": true,
        "validation_failures": true,
        "execution_timeouts": true,
        "quality_degradation": true
      }
    },
    "response_templates": {
      "status_response": {
        "format": "detailed_with_emojis",
        "sections": ["header", "summary", "active_execution", "completed_phases", "context_inheritance", "next_steps"],
        "separator_style": "unicode_heavy"
      },
      "business_response": {
        "format": "business_focused",
        "sections": ["customer_context", "business_impact", "pain_points", "success_criteria", "version_context"],
        "emphasis": "customer_value"
      },
      "technical_response": {
        "format": "technical_detailed",
        "sections": ["implementation_analysis", "code_changes", "testing_strategy", "validation_status"],
        "emphasis": "technical_accuracy"
      },
      "context_flow_response": {
        "format": "visualization_focused",
        "sections": ["inheritance_chain", "validation_checkpoints", "data_flow"],
        "emphasis": "visual_clarity"
      }
    },
    "performance_settings": {
      "cache_duration": "1_hour",
      "response_timeout": "30_seconds",
      "update_frequency": "real_time",
      "command_history_limit": 50,
      "metrics_retention": "24_hours"
    },
    "quality_thresholds": {
      "evidence_validation_minimum": 85.0,
      "context_inheritance_minimum": 90.0,
      "validation_checkpoint_minimum": 95.0,
      "format_compliance_minimum": 100.0,
      "environment_health_minimum": 7.0
    },
    "alert_configuration": {
      "version_gap_warning": true,
      "environment_fallback_info": true,
      "context_conflict_error": true,
      "validation_success_notification": true,
      "phase_completion_milestone": true,
      "framework_completion_summary": true
    }
  },
  "command_definitions": {
    "primary_commands": {
      "/status": {
        "description": "Current execution status and progress",
        "response_template": "status_response",
        "data_requirements": ["framework_state", "agent_coordination", "progress_tracking"],
        "access_level": "public"
      },
      "/insights": {
        "description": "Key business and technical insights extracted",
        "response_template": "insights_response",
        "data_requirements": ["key_insights", "business_context", "technical_analysis"],
        "access_level": "public"
      },
      "/agents": {
        "description": "Sub-agent status and data flow",
        "response_template": "agents_response",
        "data_requirements": ["agent_coordination", "context_inheritance", "validation_status"],
        "access_level": "public"
      },
      "/environment": {
        "description": "Environment health and compatibility",
        "response_template": "environment_response",
        "data_requirements": ["environment_context", "cluster_health", "deployment_status"],
        "access_level": "public"
      },
      "/business": {
        "description": "Customer impact and urgency analysis",
        "response_template": "business_response",
        "data_requirements": ["business_context", "customer_requirements", "priority_analysis"],
        "access_level": "public"
      },
      "/technical": {
        "description": "Implementation details and testing strategy",
        "response_template": "technical_response",
        "data_requirements": ["technical_analysis", "implementation_status", "testing_strategy"],
        "access_level": "public"
      },
      "/risks": {
        "description": "Potential issues and mitigation status",
        "response_template": "risks_response",
        "data_requirements": ["risk_monitoring", "validation_failures", "error_detection"],
        "access_level": "public"
      },
      "/timeline": {
        "description": "Estimated completion and milestone progress",
        "response_template": "timeline_response",
        "data_requirements": ["execution_timeline", "phase_tracking", "performance_metrics"],
        "access_level": "public"
      }
    },
    "advanced_commands": {
      "/deep-dive": {
        "description": "Detailed analysis from specific sub-agent",
        "parameters": ["agent_a", "agent_b", "agent_c", "agent_d", "qe_intelligence"],
        "response_template": "deep_dive_response",
        "data_requirements": ["sub_agent_outputs", "context_contributions", "validation_results"],
        "access_level": "advanced"
      },
      "/context-flow": {
        "description": "Progressive Context Architecture visualization",
        "response_template": "context_flow_response",
        "data_requirements": ["context_inheritance_chain", "data_flow_tracking", "validation_checkpoints"],
        "access_level": "advanced"
      },
      "/validation-status": {
        "description": "Evidence validation and quality checks",
        "response_template": "validation_response",
        "data_requirements": ["validation_engine_monitoring", "quality_metrics", "evidence_confidence"],
        "access_level": "advanced"
      },
      "/performance": {
        "description": "Framework execution metrics and optimization",
        "response_template": "performance_response",
        "data_requirements": ["execution_timeline", "agent_performance", "resource_utilization"],
        "access_level": "advanced"
      }
    }
  },
  "integration_hooks": {
    "phase_transitions": {
      "phase_0_pre_completion": "capture_environment_selection_data",
      "phase_0_completion": "capture_version_awareness_data",
      "phase_1_completion": "capture_parallel_agent_data",
      "phase_2_completion": "capture_context_aware_data",
      "phase_2_5_completion": "capture_qe_intelligence_data",
      "phase_3_completion": "capture_synthesis_data",
      "phase_4_completion": "capture_generation_data",
      "phase_5_completion": "capture_completion_data"
    },
    "sub_agent_events": {
      "agent_spawn": "track_agent_initialization",
      "agent_progress": "update_agent_status",
      "agent_completion": "capture_agent_results",
      "context_inheritance": "monitor_context_flow",
      "validation_checkpoint": "track_validation_results"
    },
    "framework_events": {
      "framework_start": "initialize_observability_state",
      "framework_error": "capture_error_context",
      "framework_completion": "generate_execution_summary",
      "user_command": "process_observability_command"
    }
  }
}