{
  "framework_debug_logging": {
    "enabled": true,
    "version": "1.0.0",
    "description": "Comprehensive framework debugging and logging configuration",
    
    "global_settings": {
      "default_log_level": "DEBUG",
      "auto_start_logging": true,
      "log_retention_days": 30,
      "max_log_file_size_mb": 100,
      "enable_real_time_monitoring": true,
      "enable_performance_tracking": true
    },
    
    "log_destinations": {
      "base_directory": ".claude/logging",
      "run_directory_format": "{run_id}",
      "file_structure": {
        "master_log": "framework_debug_master.jsonl",
        "human_readable": "framework_debug_readable.log",
        "execution_summary": "execution_summary.json",
        "error_log": "error_log.jsonl",
        "performance_log": "performance_metrics.json"
      },
      "component_directories": {
        "phases": "phases/",
        "agents": "agents/",
        "tools": "tools/",
        "context": "context/",
        "validation": "validation/",
        "environment": "environment/",
        "performance": "performance/",
        "errors": "errors/",
        "raw": "raw/"
      }
    },
    
    "hook_configuration": {
      "auto_install_hooks": true,
      "enabled_hooks": {
        "claude_code_tools": true,
        "framework_phases": true,
        "agent_coordination": true,
        "context_flow": true,
        "validation_checkpoints": true,
        "environment_interactions": true,
        "ai_service_executions": true,
        "performance_metrics": true,
        "error_detection": true
      },
      "tool_hooks": {
        "bash_tool": {
          "enabled": true,
          "log_commands": true,
          "log_outputs": true,
          "mask_sensitive_data": true,
          "command_timeout_warning": 60
        },
        "read_tool": {
          "enabled": true,
          "log_file_access": true,
          "track_file_content": false,
          "analyze_framework_files": true
        },
        "write_tool": {
          "enabled": true,
          "log_file_writes": true,
          "track_content_changes": true,
          "analyze_output_files": true
        },
        "task_tool": {
          "enabled": true,
          "log_agent_spawning": true,
          "track_agent_lifecycle": true,
          "monitor_agent_performance": true
        },
        "glob_tool": {
          "enabled": true,
          "log_search_patterns": true,
          "track_search_results": true
        },
        "grep_tool": {
          "enabled": true,
          "log_search_patterns": true,
          "track_search_results": true
        },
        "edit_tool": {
          "enabled": true,
          "log_file_modifications": true,
          "track_change_patterns": true
        }
      }
    },
    
    "framework_integration": {
      "auto_detect_run_id": true,
      "extract_jira_ticket": true,
      "track_phase_transitions": true,
      "monitor_agent_coordination": true,
      "validate_context_flow": true,
      "performance_benchmarking": true,
      "error_classification": true
    },
    
    "phase_tracking": {
      "enabled": true,
      "track_all_phases": true,
      "phase_definitions": {
        "0-pre": "Smart Environment Selection",
        "0": "JIRA FixVersion Awareness",
        "1": "Foundation Data Collection (Agent A + D)",
        "2": "Investigation Data Collection (Agent B + C)",
        "2.5": "QE Intelligence Analysis",
        "3": "AI Strategic Analysis",
        "4": "Test Generation and Validation",
        "5": "Cleanup and Finalization"
      },
      "phase_timeout_warnings": {
        "0-pre": 60,
        "0": 120,
        "1": 300,
        "2": 600,
        "2.5": 300,
        "3": 180,
        "4": 600,
        "5": 120
      }
    },
    
    "agent_monitoring": {
      "enabled": true,
      "track_all_agents": true,
      "agent_definitions": {
        "agent_a": "JIRA Intelligence Agent",
        "agent_b": "Documentation Intelligence Agent",
        "agent_c": "GitHub Investigation Agent",
        "agent_d": "Environment Intelligence Agent",
        "qe_intelligence": "QE Automation Intelligence Service"
      },
      "agent_timeout_warnings": {
        "agent_a": 180,
        "agent_b": 300,
        "agent_c": 240,
        "agent_d": 180,
        "qe_intelligence": 240
      },
      "track_agent_coordination": true,
      "monitor_context_inheritance": true
    },
    
    "validation_monitoring": {
      "enabled": true,
      "track_all_validations": true,
      "validation_types": {
        "implementation_reality": "Implementation Reality Agent validation",
        "evidence_validation": "Evidence Validation Engine checks",
        "cross_agent_validation": "Cross-Agent Validation consistency",
        "format_enforcement": "Format Enforcement validation",
        "pattern_extension": "Pattern Extension Service validation",
        "context_validation": "Context inheritance validation"
      },
      "confidence_score_tracking": true,
      "validation_failure_alerts": true
    },
    
    "performance_tracking": {
      "enabled": true,
      "metrics_collection": {
        "phase_durations": true,
        "agent_execution_times": true,
        "tool_performance": true,
        "context_processing_time": true,
        "validation_performance": true,
        "memory_usage": false,
        "cpu_usage": false
      },
      "performance_alerts": {
        "slow_phase_threshold": 600,
        "slow_agent_threshold": 300,
        "slow_tool_threshold": 30
      },
      "benchmarking": {
        "compare_with_baseline": false,
        "baseline_metrics_file": "performance_baseline.json"
      }
    },
    
    "context_flow_monitoring": {
      "enabled": true,
      "track_inheritance_chain": true,
      "monitor_context_size": true,
      "detect_context_conflicts": true,
      "track_data_sharing": true,
      "progressive_context_validation": true,
      "context_size_alerts": {
        "warning_threshold_chars": 50000,
        "critical_threshold_chars": 100000
      }
    },
    
    "error_handling": {
      "enabled": true,
      "error_classification": true,
      "error_aggregation": true,
      "error_alerts": {
        "error_count_threshold": 5,
        "critical_error_immediate_alert": true,
        "error_pattern_detection": true
      },
      "error_recovery_tracking": true,
      "error_trend_analysis": true
    },
    
    "real_time_monitoring": {
      "enabled": true,
      "refresh_interval_seconds": 1.0,
      "dashboard_mode": false,
      "export_status_interval": 60,
      "alert_conditions": {
        "error_threshold": 5,
        "phase_timeout_minutes": 5,
        "agent_timeout_minutes": 3,
        "validation_failure_threshold": 3
      },
      "notifications": {
        "console_alerts": true,
        "file_alerts": true,
        "webhook_alerts": false,
        "email_alerts": false
      }
    },
    
    "data_retention": {
      "enabled": true,
      "cleanup_old_logs": true,
      "retention_policy": {
        "successful_runs": 30,
        "failed_runs": 60,
        "debug_runs": 7
      },
      "compression": {
        "compress_old_logs": true,
        "compression_age_days": 7
      },
      "archival": {
        "archive_old_runs": false,
        "archive_location": "archive/"
      }
    },
    
    "security": {
      "mask_sensitive_data": true,
      "credential_patterns": [
        "password",
        "token",
        "key",
        "secret",
        "auth"
      ],
      "masked_commands": [
        "oc login",
        "gh auth",
        "kubectl config"
      ],
      "secure_log_storage": true,
      "audit_trail": true
    },
    
    "integration_points": {
      "framework_observability_agent": {
        "enabled": true,
        "real_time_data_sharing": true,
        "command_interface_integration": true
      },
      "mcp_integration": {
        "enabled": true,
        "log_mcp_operations": true,
        "track_performance_improvements": true
      },
      "progressive_context_architecture": {
        "enabled": true,
        "monitor_context_inheritance": true,
        "track_conflict_resolution": true
      },
      "ai_enhancement_services": {
        "enabled": true,
        "log_ai_service_executions": true,
        "track_enhancement_performance": true
      }
    },
    
    "debug_features": {
      "interactive_debugging": true,
      "log_query_interface": true,
      "timeline_analysis": true,
      "pattern_analysis": true,
      "correlation_analysis": true,
      "export_capabilities": true,
      "advanced_filtering": true
    },
    
    "quality_assurance": {
      "log_validation": true,
      "data_integrity_checks": true,
      "missing_data_detection": true,
      "duplicate_detection": true,
      "consistency_validation": true,
      "completeness_analysis": true
    }
  }
}