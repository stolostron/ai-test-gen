{
  "name": "ai-conflict-resolver",
  "version": "1.0.0",
  "description": "AI-powered merge conflict resolution system using Claude",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "lint": "eslint src/",
    "docker:build": "docker build -t ai-conflict-resolver .",
    "docker:run": "docker run -p 3000:3000 --env-file .env ai-conflict-resolver"
  },
  "keywords": [
    "github",
    "conflict-resolution",
    "ai",
    "claude",
    "automation"
  ],
  "author": "QE Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.16.1",
    "@octokit/app": "^14.0.2",
    "@octokit/graphql": "^7.0.2",
    "@octokit/rest": "^20.0.2",
    "@octokit/webhooks": "^12.0.10",
    "@slack/web-api": "^6.11.2",
    "axios": "^1.6.5",
    "diff": "^5.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "marked": "^11.1.1",
    "nodemailer": "^6.9.8",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
