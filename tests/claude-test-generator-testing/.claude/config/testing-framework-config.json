{
  "framework_testing_configuration": {
    "version": "1.0",
    "description": "Evidence-based testing framework configuration",
    "isolation_mode": "complete_with_monitoring",
    
    "monitoring_targets": {
      "main_framework_path": "../../apps/claude-test-generator/",
      "monitored_directories": [
        ".claude/",
        "runs/",
        "docs/"
      ],
      "monitored_files": [
        "CLAUDE.md",
        ".app-config"
      ]
    },
    
    "testing_policies": {
      "evidence_requirements": {
        "all_claims_require_evidence": true,
        "evidence_types": ["execution_data", "output_data", "quality_metrics", "behavioral_data"],
        "minimum_evidence_quality": 0.95
      },
      
      "progressive_testing": {
        "version_tracking": true,
        "baseline_comparison": true,
        "trend_analysis": true,
        "learning_integration": true
      },
      
      "ai_service_requirements": {
        "mandatory_ai_services": true,
        "script_usage_blocked": true,
        "service_reliability_target": 0.99
      }
    },
    
    "test_scenarios": {
      "core_validation": {
        "policy_compliance": ["citation_enforcement", "format_compliance", "dual_reports"],
        "ai_service_integration": ["service_coordination", "cascade_prevention"],
        "quality_standards": ["output_quality", "performance_metrics"]
      },
      
      "regression_testing": {
        "baseline_comparison": true,
        "quality_thresholds": {
          "minimum_quality_score": 85,
          "performance_degradation_limit": 0.2
        }
      },
      
      "adaptive_testing": {
        "change_based_selection": true,
        "risk_prioritization": true,
        "coverage_optimization": true
      }
    },
    
    "quality_baselines": {
      "storage_path": "quality-baselines/",
      "metrics_tracked": [
        "quality_score",
        "execution_time",
        "success_rate",
        "coverage_percentage"
      ],
      "baseline_update_policy": "version_change"
    },
    
    "learning_configuration": {
      "model_storage": "learning-models/",
      "pattern_recognition": true,
      "failure_analysis": true,
      "prediction_models": true,
      "continuous_improvement": true
    },
    
    "execution_settings": {
      "parallel_execution": true,
      "max_parallel_tests": 5,
      "timeout_seconds": 300,
      "retry_policy": {
        "max_retries": 3,
        "backoff_strategy": "exponential"
      }
    },
    
    "reporting_configuration": {
      "report_format": "markdown",
      "include_evidence": true,
      "include_recommendations": true,
      "dashboard_generation": true
    }
  }
}
